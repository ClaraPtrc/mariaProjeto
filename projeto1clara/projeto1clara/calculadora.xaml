<Window x:Class="projeto1clara.calculadora"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projeto1clara"
        mc:Ignorable="d"
        Title="calculadora" Height="700" Width="700">
    <Grid Height="690" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFE87BD6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="                                   CALCULADORA" VerticalAlignment="Top" FontFamily="Georgia" FontSize="24" Height="30" Foreground="Black" Background="#FF406688" Width="638" SnapsToDevicePixels="True" Grid.ColumnSpan="3"/>
        <Label Content="Escolha uma operação matematica" HorizontalAlignment="Left" Margin="9,411,0,0" VerticalAlignment="Top" Height="32" Width="265" Grid.Column="1" FontSize="16" FontFamily="Arial" Foreground="#FFF1F1F1" Background="#FF16637D"/>
        <TextBox x:Name="txt_n1" Grid.Column="1" HorizontalAlignment="Left" Margin="91,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107" RenderTransformOrigin="0.356,0.116" Height="27" FontSize="16"/>
        <TextBox x:Name="txt_n2" Grid.Column="1" HorizontalAlignment="Left" Margin="91,166,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="107" RenderTransformOrigin="0.356,0.116" Height="25" FontSize="16"/>
        <Label Grid.Column="1" Content="Número 1 :" HorizontalAlignment="Left" Margin="10,115,0,0" VerticalAlignment="Top" Background="#FF78AAE2" Width="76" Height="26"/>
        <Label Grid.Column="1" Content="Número 2 :" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Background="#FF78AAE2" Width="76" Height="26"/>
        <Label Content="Adicione os números :" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top" Height="28" Width="265" Grid.Column="1" FontSize="16" FontFamily="Arial" Foreground="#FFF1F1F1" Background="#FF16637D"/>
        <Button x:Name="bt_adição" Content="ADIÇÃO" HorizontalAlignment="Left" Margin="140,480,0,0" VerticalAlignment="Top" Background="#FF3FBCD4" Width="108" FontSize="18" FontFamily="Amiri" Grid.ColumnSpan="2" Click="bt_adição_Click"/>
        <Button x:Name="bt_subtração" Content="SUBTRAÇÃO" HorizontalAlignment="Left" Margin="129,480,0,0" VerticalAlignment="Top" Background="#FF3FBCD4" Width="148" FontSize="18" FontFamily="Amiri" Grid.Column="1" Click="bt_subtração_Click"/>
        <Button x:Name="bt__multiplicação" Content="MULTIPLICAÇÃO" HorizontalAlignment="Left" Margin="129,533,0,0" VerticalAlignment="Top" Background="#FF3FBCD4" Width="148" FontSize="18" FontFamily="Amiri" Grid.Column="1" Click="bt__multiplicação_Click"/>
        <Button x:Name="bt_divisão" Content="DIVISÃO" HorizontalAlignment="Left" Margin="140,533,0,0" VerticalAlignment="Top" Background="#FF3FBCD4" Width="108" FontSize="18" FontFamily="Amiri" Grid.IsSharedSizeScope="True" Grid.ColumnSpan="2" Click="bt_divisão_Click"/>
        <TextBox x:Name="txt_result" Grid.Column="1" HorizontalAlignment="Left" Margin="62,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" Height="26" FontSize="20" FontFamily="Arial Black" RenderTransformOrigin="0.496,-0.589" TextAlignment="Center"/>
        <Button x:Name="bt_voltar" Grid.Column="1" Content="apagar " HorizontalAlignment="Left" Margin="90,621,0,0" VerticalAlignment="Top" Background="#FF4DD0BB" FontSize="16" Width="80" Height="31" Click="bt_voltar_Click"/>
    </Grid>
</Window>
